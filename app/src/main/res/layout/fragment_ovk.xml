<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.rhpp.PlasmaViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:ems="10"
            android:hint="01-01-2021"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="@+id/tvDate"
            app:layout_constraintEnd_toEndOf="@+id/etOvk" />

        <EditText
            android:id="@+id/etOvk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:ems="10"
            android:hint="Nama ovk"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/tvOvk"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Harga"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
            app:layout_constraintStart_toStartOf="@+id/etAmount" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:ems="10"
            android:hint="Jumlah OVK"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalOvk"
            app:layout_constraintEnd_toEndOf="@+id/etTotalRp" />

        <EditText
            android:id="@+id/etInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:ems="10"
            android:hint="Masukkan no. Invoice"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/tvInvoice"
            app:layout_constraintStart_toStartOf="@+id/etDate" />

        <EditText
            android:id="@+id/etTotalRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Total (Rp)"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalRp"
            app:layout_constraintEnd_toEndOf="@+id/fabOvk" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:text="Silahkan isi data OVK dengan benar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Tanggal"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvInvoice"
            app:layout_constraintTop_toBottomOf="@+id/tvInvoice" />

        <TextView
            android:id="@+id/tvOvk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="OVK"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvDate"
            app:layout_constraintTop_toBottomOf="@+id/tvDate" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Harga"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvOvk"
            app:layout_constraintTop_toBottomOf="@+id/tvOvk" />

        <TextView
            android:id="@+id/tvTotalOvk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Jumlah"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

        <TextView
            android:id="@+id/tvInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="52dp"
            android:text="Invoice"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvTotalRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Total (Rp)"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvTotalOvk"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalOvk" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOvk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@+id/etInvoice"
            app:layout_constraintTop_toBottomOf="@+id/etTotalRp"
            app:srcCompat="@drawable/ic_save" />

        <Button
            android:id="@+id/btnList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List OVK"
            app:layout_constraintBottom_toBottomOf="@+id/fabOvk"
            app:layout_constraintEnd_toStartOf="@+id/fabOvk"
            app:layout_constraintTop_toBottomOf="@+id/etTotalRp"
            app:layout_constraintVertical_bias="0.75" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOvk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="97dp"
            android:visibility="gone"
            tools:layout_editor_absoluteY="31dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>